mixin breadcrumbs(arr)
  .breadcrumb-wrap
    .container
      ul.breadcrumbs&attributes(attributes)
        - var n = arr.length
        each item,index in arr
          if (index < n-1)
            li
              +link(item.title, item.href, item.text)
            li.slash /
          else
            li.active!= item.text ? item.text : item.title
