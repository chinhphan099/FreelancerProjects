block vars
  -title = 'Sitemap'

mixin rowTitle(title)
  tr
    td.title(colspan="13"): strong!=title
mixin rowContent(obj)
  tr(class=obj.class)&attributes(attributes)
    - if (obj.class === 'template') {
      td.number!=obj.no
      td.psd!=obj.psd
      td.file: a(href=obj.link, target="_blank")!=obj.link
    - } else {
      td(colspan="3")!=obj.comment
    - }

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="favicon.ico", type="image/x-icon")
    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui, user-scalable=no")
    title=title
    style.
      a {display: block; color: #2336C1; text-decoration: none;}
      a:hover {color: #f00;}
      a:visited {color: #2336C1;}
      *, *:before, *:after {-webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;}
      body {margin: 0; font-family: Arial; font-size: 14px; color: #444;}
      table {border-collapse: collapse; border-spacing: 0;}
      .table {width: 100%; margin: 0 auto 20px;}
      .table caption {padding: 20px 10px; font-weight: bold; font-size: 25px; color: #565656; text-transform: uppercase;}
      .table tr > th, .table tr > td {padding: 10px; line-height: 1.428571429; vertical-align: top; border-bottom: 1px solid #A7A4A2;}
      .table thead > tr > th {font-size: 14px;}
      .table thead tr:first-child th {vertical-align: middle; border-top: 2px solid #777;}
      .table .template > td, .table .template > th {background-color: #EFEFEF;}
      .table tr > td, .table tr > th {border-left: 1px solid #A7A4A2;}
      .table tr > td:first-child, .table tr > th:first-child {border-left: none;}
      .table .title {padding: 7px 10px; border-top: 1px solid #565656; text-align: center;}
      .table .title strong {font-size: 20px; color: #8C8C8C;}
      .table .number {width: 35px; text-align: center;}
      .table td.number {padding-left: 12px; padding-right: 6px; text-align: right;}
      .table .psd {width: 150px;}
      .table .file {width: 200px;}
      .table .status {width: 150px;}
  body
    table.table
      caption Lalashop
      thead
        tr
          th.number No.
          th.psd PSD
          th.file File
      tbody
        block container
