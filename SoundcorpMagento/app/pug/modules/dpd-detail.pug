								.col-xs-12.col-lg-6
									.fieldset
										label.label(for="productName") Product Name #[span *]
										+input({id: 'productName', placeholder: 'Product Name'})
							.row
								.col-xs-12.col-lg-6
									.fieldset
										label.label(for="prlink") Competitor's product link #[span *]
										+input({id: "prlink", placeholder: "Competitor's product link"})
								.col-xs-12.col-lg-6
									.fieldset
										label.label(for="compePrice") Competitor's price  #[span *]
										+input({id: "compePrice", placeholder: "Competitor's price "})
							.row
								.col-xs-12.col-lg-6
									.fieldset
										label.label(for="Information ") Information  #[span *]
										+textarea('Information', 'Information')
