						+slide-blog-item('slide-img-1.jpg')
						+slide-blog-item('slide-img-1.jpg')
						+slide-blog-item('slide-img-1.jpg')
					span.load

				// Blog list
				ul.blog-list(data-sameheight="no4parent")
