extends layouts/layout

block vars
	-title = 'Blog Category'
	-bodyClass = 'blog-category-page'

block main
	main
		.testimonials-wrap
			.container
				+promotion-top()
				+breadcrumbs([{title: 'Maternity Style Blog'}])
				.heading-description
					span.flower: img(src="images/flower-small-01.png", alt="")
