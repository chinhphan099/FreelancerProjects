header.header
  .header-top-over
    .grid
      .top-links
        +link('Hotline: 1900 1456', 'tel:19001456')
          i.icon-phone
          | Hotline: 1900 1456
        +link('Liên hệ', 'mailto:lalashop@gmal.com')
          i.icon-mail
          | Liên hệ
      .top-links.right-hand
        +link('Hướng dẫn', 'guide.html')
          i.icon-help
          | Hướng dẫn
        +link('Kiểm tra đơn hàng', 'javascript:;')
          i.icon-news
          | Kiểm tra đơn hàng
          .content.order-module
            +form({'id': 'order_form'})
              +input({'id': 'txt-order-id', 'placeholder': 'Mã đơn hàng'})
              +input({'id': 'txt-id-email', 'placeholder': 'Số điện thoại hoặc email'})
              +button({'id': 'btn-check'}).btn-primary Kiểm tra
        +link('Thông báo', 'javascript:;')
          i.icon-notice
          | Thông báo (
          span 1
          | )
          .content
            p
              | Giảm giá&nbsp;
              em.pink 50%
              | &nbsp;cho đơn hàng đầu tiên

  .grid
    .col-md-2
      +link('Lala Shop', 'index.html').logo
        +img('Lala Shop', 'logo.png')
    .col-md-5
      +form({'id': 'search_form'})
        .search-box
          +input({'id': 'txt-search', 'placeholder': 'Tìm sản phẩm tại đây'})
          span: +button({'id': 'btn-search'})
            i.icon-search
    .col-md-4.col-md-offset-1
      .wrap.clearfix
        .group.cart-group
          +link('Giỏ hàng', 'javascript:;').text-view
            i.icon-cart
            if loged
              span.total 10
            else
              span.total 0
            span.text Giỏ hàng
          if loged
            .content
              p.status
                +link('xem tất cả', '#', 'Xem tất cả')
                  i.icon-next
                | Có 2 sản phẩm trong giỏ hàng
              ul.chose-list
                li
                  .thumb
                    +link('Decal 3D dán tường cho bé')
                      +img-upload('Decal 3D dán tường cho bé', 'photo_06.jpg')
                  .details
                    span.quantum x1
                    +link('Remove', 'javascript:;', "&nbsp;").icon-trash
                    p.name: +link('Decal 3D dán tường cho bé')
                    p.old-price 1.000.000 đ
                    p.sale-price 500.000 đ
                li
                  .thumb
                    +link('Decal 3D dán tường cho bé')
                      +img-upload('Decal 3D dán tường cho bé', 'photo_08.jpg')
                  .details
                    span.quantum x1
                    +link('Remove', 'javascript:;', "&nbsp;").icon-trash
                    p.name: +link('Decal 3D dán tường cho bé')
                    p.old-price 1.000.000 đ
                    p.sale-price 500.000 đ
              p.total-text
                | Tổng cộng:
                span.pink 1.000.000 đ
              .redirect-link
                +link('Xem giỏ hàng').to-cart
                +button({'id': 'pay-btn'}).btn-primary
                  +link('Thanh toán')
          else
            .content.empty-cart
              p Bạn chưa chọn sản phẩm nào
        .group.love-group
          +link('Yêu thích', 'javascript:;').text-view
            i.icon-heart
            span.text Yêu thích
        .group.user-group
          unless loged
            .notlogin
              +link('Đăng nhập', 'javascript:;').text-view
                i.icon-user
                span.text
                  | Đăng nhập
              .content
                .login-by
                  span.text-1 Đăng nhập bằng
                  +link('Facebook', 'javascript:;', '&nbsp;').icon-facebook
                  +link('Twitter', 'javascript:;', '&nbsp;').icon-twitter
                  +link('Google+', 'javascript:;', '&nbsp;').icon-google
                +form({'id': 'login_form'})
                  +input({'id': 'txt-username'})
                  +input({'id': 'txt-password', 'type': 'password'})
                  .remember
                    +input({'id': 'remember-cb', 'type': 'checkbox'})
                    +label('Nhớ mật khẩu', 'remember-cb')
                    +link('Quên mật khẩu ?')
                  +button({'id': 'btn-login'}).btn-primary Đăng nhập
                  p Chưa là thành viên?
                  +button({'id': 'btn-link'}).btn-primary.red
                    +link('Đăng ký ngay', 'register.html')
          else
            .loged
              +link('Chào Junjun123', 'javascript:;').text-view
                i.icon-user
                span.text
                  | Chào
                  span Junjun123
                    i.icon-triangle-down
              .content
                ul.links
                  li: +link('Thông tin cá nhân')
                  li: +link('Sổ địa chỉ')
                  li: +link('Đơn hàng của bạn')
                  li: +link('Thoát', 'javascript:;')
